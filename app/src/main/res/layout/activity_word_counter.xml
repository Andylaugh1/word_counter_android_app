<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Word_counter">

    <EditText
        android:id="@+id/enter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName|textVisiblePassword|textWebEditText"
        android:text="@string/enter_text"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="47dp" />

    <Button
        android:id="@+id/count_button"
        android:layout_width="103dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:onClick="onCountButtonClicked"
        android:text="@string/count_button"
        app:layout_constraintTop_toBottomOf="@+id/enter_text"
        tools:layout_editor_absoluteX="132dp" />

    <TextView
        android:id="@+id/answer_box"
        android:layout_width="266dp"
        android:layout_height="66dp"
        android:layout_marginTop="52dp"
        android:text="@string/answer_text"
        app:layout_constraintTop_toBottomOf="@+id/instance_button"
        tools:layout_editor_absoluteX="50dp" />

    <Button
        android:id="@+id/instance_button"
        android:layout_width="212dp"
        android:layout_height="74dp"
        android:layout_marginTop="60dp"
        android:onClick="onCountInstanceButtonClicked"
        android:text="@string/instance_button"
        app:layout_constraintTop_toBottomOf="@+id/count_button"
        tools:layout_editor_absoluteX="77dp" />

</android.support.constraint.ConstraintLayout>